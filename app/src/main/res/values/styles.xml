<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="root_style">

    </style>

    <style name="h_match_w_match" parent="root_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="h_wrap_w_wrap" parent="root_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="h_wrap_w_match" parent="root_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="rel_common" parent="root_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">45dp</item>
    </style>
    <!-- 通用背景 -->
    <style name="common_bg" parent="h_match_w_match">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ImageView_me_w" parent="h_wrap_w_wrap">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@mipmap/rihgt_back</item>
    </style>

    <!-- 标题字体 -->
    <style name="title_text" parent="h_wrap_w_wrap">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">18dp</item>
    </style>

    <!-- 普通的灰色线 -->
    <style name="common_gray_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#F5F5F5</item>
    </style>

    <!-- 普通文本 -->
    <style name="TextFormat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">left</item>
    </style>
    <!-- 合同汇总 -->
    <style name="Details_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#303030</item>
    </style>
    <!-- 合同详情 -->
    <style name="contract_Details_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_item</item>
    </style>

    <!-- 说明文本 -->
    <style name="TextExplain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:gravity">left</item>
    </style>
    <!-- home_item -->
    <style name="home_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_item</item>
    </style>

    <style name="home_item_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 去除Dialog边框 -->
    <style name="myDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <!-- 通用按钮演示 -->
    <style name="common_btn">
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">320dp</item>
        <item name="android:background">@drawable/select_login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="HintError" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red</item>
    </style>

    <!-- 输入框 -->
    <style name="EditFormat" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/edittext_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#272727</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">"请输入"</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColorHint">#FFB3B3B1</item>
    </style>
    <!-- 金额输入框 -->
    <style name="EditFormat_Num" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/edittext_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#272727</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">"请输入"</item>
        <item name="android:inputType">number|numberDecimal</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColorHint">#FFB3B3B1</item>
    </style>


    <!-- 搜索 -->
    <declare-styleable name="searchmlist">
        <attr name="search_hint" format="string|reference" /><!--EditText hint-->
        <attr name="search_baground" format="reference" /><!--EditText  background-->
    </declare-styleable>
</resources>
