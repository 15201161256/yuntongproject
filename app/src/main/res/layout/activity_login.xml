<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/back_rl"
            android:layout_width="50dp"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:background="@drawable/select_white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@mipmap/ic_arrow_black" />

        </RelativeLayout>


        <TextView
            style="@style/title_text"
            android:text="登录" />

        <TextView
            android:id="@+id/login_register_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="注册"
            android:visibility="gone"
            android:textColor="#4D4D4D"
            android:textSize="15sp" />

    </RelativeLayout>

    <View style="@style/common_gray_line"></View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="运通工程有限公司"
        android:textColor="#2453B3"
        android:textSize="25sp" />


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="55.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:background="#FFFFFF"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/username_et"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@mipmap/new_user"
                android:drawablePadding="10dp"
                android:hint="请输入用户名"
                android:maxLength="25"
                android:textColorHint="#ACACAC"
                android:textSize="17sp">

            </EditText>
        </android.support.design.widget.TextInputLayout>

    </FrameLayout>


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="55.5dp"
        android:layout_marginLeft="20dp"
        android:background="#FFFFFF"
        android:gravity="center">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/userpassword_et"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@mipmap/new_userpsd"
                android:drawablePadding="10dp"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="25"
                android:textColorHint="#ACACAC"
                android:textSize="17sp">

            </EditText>
        </android.support.design.widget.TextInputLayout>


    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/forget_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textColor="#2453B3"
            android:textSize="14sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/next_bt"
        style="@style/common_btn"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:text="登录" />

</LinearLayout>
