<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/back_rl"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/select_white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@mipmap/ic_arrow_black" />

        </RelativeLayout>


        <TextView
            style="@style/title_text"
            android:text="新增合同" />

    </RelativeLayout>

    <View style="@style/common_gray_line"></View>


    <com.example.yuntong.view.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/select_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Details_text"
                        android:layout_marginLeft="15dp"
                        android:text="必填项"
                        android:textColor="@color/blue"
                        android:textSize="18sp" />

                </LinearLayout>

            </RelativeLayout>

            <View style="@style/common_gray_line"></View>

            <RelativeLayout
                android:id="@+id/city_rl"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/select_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible">
                    <TextView
                        style="@style/Details_text"
                        android:layout_marginLeft="15dp"
                        android:text="合同区域" />


                    <EditText
                        android:id="@+id/regionList_et"
                        style="@style/EditFormat"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Details_text"
                        android:layout_marginLeft="15dp"
                        android:text="合同区域" />

                    <TextView
                        android:id="@+id/city_tv"
                        style="@style/Details_text"
                        android:layout_marginLeft="20dp"
                        android:text="请选择"
                        android:textSize="14sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/rihgt_back" />

            </RelativeLayout>

            <View style="@style/common_gray_line"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/select_white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Details_text"
                        android:layout_marginLeft="15dp"
                        android:text="甲方名称" />


                </LinearLayout>

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="90dp"
                    android:dropDownVerticalOffset="45dp"></Spinner>

            </RelativeLayout>

            <View style="@style/common_gray_line"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/select_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Details_text"
                        android:layout_marginLeft="15dp"
                        android:text="中标单位" />

                    <EditText
                        android:id="@+id/secondPartyName_et"
                        style="@style/EditFormat" />

                </LinearLayout>


            </RelativeLayout>

            <View style="@style/common_gray_line"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/select_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Details_text"
                        android:layout_marginLeft="15dp"
                        android:text="合同编号" />

                    <EditText
                        android:id="@+id/contractNo_et"
                        style="@style/EditFormat" />

                </LinearLayout>


            </RelativeLayout>

            <View style="@style/common_gray_line"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/select_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Details_text"
                        android:layout_marginLeft="15dp"
                        android:text="合同名称" />

                    <EditText
                        android:id="@+id/contractName_et"
                        style="@style/EditFormat" />

                </LinearLayout>


            </RelativeLayout>

            <View style="@style/common_gray_line"></View>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/select_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Details_text"
                        android:layout_marginLeft="15dp"
                        android:text="选填项"
                        android:textColor="@color/blue"
                        android:textSize="18sp" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/select_white"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Details_text"
                            android:layout_marginLeft="15dp"
                            android:text="合同金额" />

                        <EditText
                            android:id="@+id/contractAmount_et"
                            style="@style/EditFormat_Num"
                             />

                    </LinearLayout>


                </RelativeLayout>

                <View style="@style/common_gray_line"></View>


                <RelativeLayout
                    android:id="@+id/signtime"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/select_white">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Details_text"
                            android:layout_marginLeft="15dp"
                            android:text="签订日期" />

                        <TextView
                            android:id="@+id/sign_tv"
                            style="@style/Details_text"
                            android:layout_marginLeft="20dp"
                            android:text="请选择"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@mipmap/rihgt_back" />

                </RelativeLayout>

                <View style="@style/common_gray_line"></View>

                <RelativeLayout
                    android:id="@+id/start_time"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/select_white">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Details_text"
                            android:layout_marginLeft="15dp"
                            android:text="开始日期" />

                        <TextView
                            android:id="@+id/time_start_tv"
                            style="@style/Details_text"
                            android:layout_marginLeft="20dp"
                            android:text="请选择"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@mipmap/rihgt_back" />

                </RelativeLayout>

                <View style="@style/common_gray_line"></View>

                <RelativeLayout
                    android:id="@+id/end_time"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/select_white"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Details_text"
                            android:layout_marginLeft="15dp"
                            android:text="结束日期" />

                        <TextView
                            android:id="@+id/end_time_tv"
                            style="@style/Details_text"
                            android:layout_marginLeft="15dp"
                            android:text="2019年12月1日"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@mipmap/rihgt_back" />

                </RelativeLayout>


            </LinearLayout>

            <Button
                android:id="@+id/add_bt"
                style="@style/common_btn"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:text="确认" />

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        </LinearLayout>


    </com.example.yuntong.view.ObservableScrollView>


</LinearLayout>
